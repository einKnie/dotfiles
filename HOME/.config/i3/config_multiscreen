# bar configuration

# i3bar on secondary display
# 'output' sets display, check available output with 'xrandr -q'
bar {
        i3bar_command i3bar
        status_command i3status --transparency -c $HOME/.config/i3status/config_primary
        output $display_secondary
        #tray_output none
        separator_symbol |
        colors {
          background #18181800
          statusline #D0D0D000
          separator  #D0D0D050
          # class            #border   #bground  #text
          focused_workspace  #FFFFFF20 #15151500 #D0D0D020
          active_workspace   #3F3F3F20 #15151500 #D0D0D020
          inactive_workspace #15151520 #3F3F3F00 #D0D0D020
          urgent_workspace   #15151520 #15151500 #B2282C20
        }
}

# i3bar on primary display (with less output)
bar {
  i3bar_command i3bar
  status_command i3status --transparency -c $HOME/.config/i3status/config_secondary
  output $display_primary
  tray_output none
  separator_symbol |
  colors {
          background #18181800
          statusline #D0D0D000
          separator  #7a7a7a00
          # class            #border   #bground  #text
          focused_workspace  #FFFFFF20 #15151500 #D0D0D020
          active_workspace   #3F3F3F20 #15151500 #D0D0D020
          inactive_workspace #15151520 #3F3F3F00 #D0D0D020
          urgent_workspace   #15151520 #15151500 #B2282C20
  }
}

